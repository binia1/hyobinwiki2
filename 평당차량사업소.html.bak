            /* [라이트 모드 변수] */
            --wiki-main: #7777AA; 
            --wiki-border: #ccc; 
            --wiki-bg: #ffffff; 
            --wiki-text: #212529;
            --wiki-header-text: #000000;
            --wiki-gray-bg: #f0f0f0; 
            --wiki-link: #0055AA;
            --wiki-table-header: #7777AA;
            --wiki-table-header-text: #ffffff;
            --wiki-table-cell-bg: #F7F7F7;
            --wiki-table-text: #000000;
            --wiki-toc-bg: #f9f9f9;
            --infobox-bg: #ffffff;
            --nav-bg: #7777AA;
            --nav-text: #ffffff;
            --nav-cell-bg: #F9F9F9;
            --nav-cell-text: #000000;
            
            /* 틀 색상 */
            --warning-bg: #fff3cd;
            --warning-border: #ffeeba;
            --warning-text: #856404;
            
            --caution-bg: #f8d7da;
            --caution-border: #f5c6cb;
            --caution-text: #721c24;
        }

        /* [다크 모드 변수] */
        .dark-mode {
            --wiki-main: #9999CC; 
            --wiki-border: #444; 
            --wiki-bg: #1e1e1e; 
            --wiki-text: #e0e0e0; 
            --wiki-header-text: #ffffff;
            --wiki-gray-bg: #2d2d2d; 
            --wiki-link: #66aaff;
            --wiki-table-header: #3a3a55;
            --wiki-table-header-text: #eeeeee;
            --wiki-table-cell-bg: #252525;
            --wiki-table-text: #e0e0e0;
            --wiki-toc-bg: #2a2a2a;
            --infobox-bg: #252525;
            --nav-bg: #2d2d3d;
            --nav-text: #eeeeee;
            --nav-cell-bg: #2d2d2d;
            --nav-cell-text: #ffffff;
            
            --warning-bg: #3e3215;
            --warning-border: #52421a;
            --warning-text: #eecd68;
            
            --caution-bg: #3e1518;
            --caution-border: #521a1d;
            --caution-text: #eeb0b6;
        }

        body { font-family: 'Noto Sans KR', sans-serif; background-color: var(--wiki-bg); color: var(--wiki-text); line-height: 1.7; word-break: keep-all; margin: 0; transition: background-color 0.3s, color 0.3s; }
        .wiki-container { max-width: 1300px; margin: 0 auto; padding: 20px 40px; border-left: 1px solid var(--wiki-border); border-right: 1px solid var(--wiki-border); min-height: 100vh; background-color: var(--wiki-bg); transition: border-color 0.3s, background-color 0.3s; }

        /* 타이틀 스타일 */
        .txt-lvl-1 { font-size: 3.5rem; font-weight: 900 !important; color: var(--wiki-header-text); line-height: 1.1; letter-spacing: -1.5px; margin-bottom: 0; } 
        .title-area { display: flex; justify-content: space-between; align-items: flex-end; border-bottom: 2px solid var(--wiki-border); margin-bottom: 20px; padding-bottom: 10px; }

        /* 문단 제목 스타일 */
        h2 { font-size: 1.8rem; font-weight: 900; border-bottom: 1px solid var(--wiki-border); padding-bottom: 5px; margin-top: 2.5rem; display: flex; align-items: center; gap: 10px; color: var(--wiki-header-text); clear: both; }
        h2::before { content: ""; display: inline-block; width: 6px; height: 1.8rem; background: var(--theme-color); margin-right: 5px; }
        
        h3 { font-size: 1.4rem; font-weight: 900; margin-top: 1.8rem; border-left: 5px solid var(--theme-color); padding-left: 12px; color: var(--wiki-header-text); }
        h4 { font-size: 1.1rem; font-weight: 800; margin-top: 1.2rem; color: var(--wiki-header-text); border-left: 3px solid #999; padding-left: 10px; }
        
        /* 위키 버튼 스타일 */
        .wiki-btn { 
            border: 1px solid var(--wiki-border); background: var(--wiki-bg); padding: 4px 12px; border-radius: 4px; font-size: 12px; font-weight: bold; color: var(--wiki-text); 
            cursor: pointer; transition: all 0.2s; display: inline-flex; align-items: center; gap: 4px; text-decoration: none !important; line-height: 1.2; 
        }
        .wiki-btn:hover { background: var(--wiki-gray-bg); }

        /* 표 스타일 */
        table { border-collapse: collapse !important; width: 100% !important; margin: 15px 0; border: 1px solid var(--wiki-border) !important; table-layout: auto !important; font-size: 0.9rem; }
        th, td { border: 1px solid var(--wiki-border) !important; padding: 8px 12px; text-align: center; vertical-align: middle; }
        th { background-color: var(--wiki-gray-bg); color: var(--wiki-header-text); }
        td { background-color: var(--wiki-table-cell-bg); color: var(--wiki-table-text); }
        
        /* 인포박스 스타일 */
        .infobox { border: 2px solid var(--theme-color); background-color: var(--infobox-bg); width: 100%; max-width: 400px; font-size: 0.9rem; margin-bottom: 20px; float: right; margin-left: 20px; border-radius: 4px; overflow: hidden; }
        .infobox-title { background-color: var(--theme-color); color: white; padding: 10px; text-align: center; font-size: 1.3rem; font-weight: bold; }
        .infobox-image { text-align: center; padding: 15px 0; background: var(--infobox-bg); display: flex; flex-direction: column; align-items: center; justify-content: center; }
        .infobox table { border: none !important; margin: 0 !important; width: 100% !important; }
        .infobox th { background-color: var(--wiki-gray-bg) !important; color: var(--wiki-text) !important; width: 100px; text-align: center; font-weight: bold; border: 1px solid var(--wiki-border) !important; }
        .infobox td { text-align: left; padding: 5px 8px; border: 1px solid var(--wiki-border) !important; background-color: var(--infobox-bg) !important; color: var(--wiki-text) !important; }
        
        /* 링형 로고 스타일 */
        .ring-logo {
            width: 80px; height: 80px;
            border-radius: 50%;
            border: 6px solid var(--theme-color);
            background: var(--wiki-bg);
            display: flex; align-items: center; justify-content: center;
            font-size: 2.2rem; font-weight: 900;
            color: var(--theme-color);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .wiki-link { color: var(--wiki-link); font-weight: bold; cursor: pointer; text-decoration: none; }
        .wiki-link:hover { text-decoration: underline; }
        .external-link::after { content: "↗"; font-size: 0.7em; vertical-align: super; margin-left: 2px; color: var(--wiki-text); opacity: 0.7; }

        .category-box { background: var(--wiki-gray-bg); border: 1px solid var(--wiki-border); padding: 8px 12px; font-size: 0.8rem; margin: 15px 0; border-radius: 4px; }
        
        /* 목차 스타일 */
        .toc { display: inline-block; min-width: 300px; border: 1px solid var(--wiki-border); background: var(--wiki-toc-bg); padding: 15px; border-radius: 4px; margin-bottom: 20px; }
        .toc-title { text-align: center; font-weight: bold; border-bottom: 1px solid var(--wiki-border); margin-bottom: 10px; padding-bottom: 5px; color: var(--wiki-header-text); }
        .toc ul { list-style: none; padding: 0; margin: 0; font-size: 0.95rem; }
        .toc ul li { margin-bottom: 6px; }
        .toc ul ul { margin-left: 20px; margin-top: 6px; font-size: 0.95rem; }
        .toc a { color: var(--wiki-text); text-decoration: none; transition: color 0.2s; }
        .toc a:hover { color: var(--wiki-link); text-decoration: underline; }
        
        /* 둘러보기 틀 (Nav Template) */
        .nav-template { border: 1px solid var(--wiki-border); margin: 10px 0; }
        .nav-template summary { 
            background-color: var(--wiki-table-header); 
            color: var(--wiki-table-header-text); 
            padding: 8px; 
            font-weight: bold; 
            cursor: pointer; 
            text-align: center; 
            list-style: none; 
        }
        .nav-template summary::-webkit-details-marker { display: none; }
        .nav-template-content { background-color: var(--wiki-bg); padding: 0; }
        
        /* 둘러보기 틀 셀 스타일 */
        .nav-cell {
            background-color: var(--nav-cell-bg);
            color: var(--nav-cell-text);
        }
        
        /* 노선 색상 클래스 */
        .bg-line-1 { background-color: var(--line-1); color: white; }
        .bg-line-2 { background-color: var(--line-2); color: white; }
        .bg-line-3 { background-color: var(--line-3); color: black; }
        .bg-line-4 { background-color: var(--line-4); color: white; }
        .bg-line-5 { background-color: var(--line-5); color: white; }
        .bg-line-6 { background-color: var(--line-6); color: white; }
        .bg-line-7 { background-color: var(--line-7); color: white; }
