    <script>
        // 각주 호버보드 (툴팁) 기능
        document.addEventListener('DOMContentLoaded', () => {
            const refs = document.querySelectorAll('.footnote-ref a');
            const tooltip = document.getElementById('footnote-tooltip');

            refs.forEach(ref => {
                ref.addEventListener('mouseenter', (e) => {
                    e.preventDefault(); 
                    const targetId = ref.getAttribute('href').substring(1); 
                    const targetContent = document.querySelector(`.footnote-content[id="${targetId}"]`);
                    
                    if (targetContent) {
                        tooltip.innerHTML = targetContent.innerHTML;
                        tooltip.style.display = 'block';
                        moveTooltip(e);
                    }
                });

                ref.addEventListener('mousemove', (e) => {
                    moveTooltip(e);
                });

                ref.addEventListener('mouseleave', () => {
                    tooltip.style.display = 'none';
                });
            });

            function moveTooltip(e) {
                const x = e.clientX + 15;
                const y = e.clientY + 15;
                
                const tooltipRect = tooltip.getBoundingClientRect();
                const windowWidth = window.innerWidth;
                const windowHeight = window.innerHeight;

                let finalX = x;
                let finalY = y;

                if (x + tooltipRect.width > windowWidth) {
                    finalX = x - tooltipRect.width - 20;
                }
                if (y + tooltipRect.height > windowHeight) {
                    finalY = y - tooltipRect.height - 20;
                }

                tooltip.style.left = finalX + 'px';
                tooltip.style.top = finalY + 'px';
            }
        });
    </script>

    <script src="assets/wiki_index.js"></script>
