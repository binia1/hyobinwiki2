        .toc ul li { margin-bottom: 6px; }
        .toc ul ul { margin-left: 20px; margin-top: 6px; font-size: 0.95rem; }
        .toc a { color: var(--wiki-text); text-decoration: none; transition: color 0.2s; }
        .toc a:hover { color: var(--wiki-link); text-decoration: underline; }
        
