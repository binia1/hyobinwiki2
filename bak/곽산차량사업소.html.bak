            --wiki-main: #9999CC; 
            --wiki-border: #444; 
            --wiki-bg: #1e1e1e; 
            --wiki-text: #e0e0e0; 
            --wiki-header-text: #ffffff;
            --wiki-gray-bg: #2d2d2d; 
            --wiki-link: #66aaff;
            --wiki-table-header: #3a3a55;
            --wiki-table-header-text: #eeeeee;
            --wiki-table-cell-bg: #252525;
            --wiki-table-text: #e0e0e0;
            --wiki-toc-bg: #2a2a2a;
            --infobox-bg: #252525;
            --nav-bg: #2d2d3d;
            --nav-text: #eeeeee;
            --nav-cell-bg: #2d2d2d;
            --nav-cell-text: #ffffff;
        }

        body { font-family: 'Noto Sans KR', sans-serif; background-color: var(--wiki-bg); color: var(--wiki-text); line-height: 1.7; word-break: keep-all; margin: 0; transition: background-color 0.3s, color 0.3s; }
