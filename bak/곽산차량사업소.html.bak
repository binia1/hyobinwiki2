            --wiki-table-header-text: #ffffff;
            --wiki-table-cell-bg: #F7F7F7;
            --wiki-table-text: #000000;
            --wiki-toc-bg: #f9f9f9;
            --infobox-bg: #ffffff;
            --nav-bg: #7777AA;
            --nav-text: #ffffff;
            --nav-cell-bg: #F9F9F9;
            --nav-cell-text: #000000;
        }

        /* [다크 모드 변수] */
