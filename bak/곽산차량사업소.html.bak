        .wiki-link:hover { text-decoration: underline; }
        .external-link::after { content: "↗"; font-size: 0.7em; vertical-align: super; margin-left: 2px; color: var(--wiki-text); opacity: 0.7; }

        .category-box { background: var(--wiki-gray-bg); border: 1px solid var(--wiki-border); padding: 8px 12px; font-size: 0.8rem; margin: 15px 0; border-radius: 4px; }
        
        /* 목차 스타일 */
