    <script>
        function toggleTheme() {
            const body = document.body;
            const isDark = body.getAttribute('data-theme') === 'dark';
            body.setAttribute('data-theme', isDark ? 'light' : 'dark');
            localStorage.setItem('wiki_theme', isDark ? 'light' : 'dark');
            document.getElementById('themeBtn').innerText = isDark ? '다크모드' : '라이트모드';
        }
        
        function showMsg(text) {
            const box = document.getElementById('wiki-msg-box');
            box.innerText = text; box.style.display = 'block';
            setTimeout(() => { box.style.display = 'none'; }, 3000);
        }

        function handleSearch(query) {
            if (!query) return;
            const target = query.trim();
            const fileMap = {
                '효빈광역시': 'hyobin_city.html',
                '박효빈': 'park_hyobin.html',
                '윤재훈': 'yun_jaehoon.html',
                '효빈대학교': 'hb_university.html',
                '템플릿': 'incident_template.html'
            };

            if (fileMap[target]) {
                showMsg(target + " 문서로 이동합니다...");
            } else {
                showMsg('검색 결과가 없습니다: ' + target);
            }
        }

        window.onload = function() {
            const savedTheme = localStorage.getItem('wiki_theme');
            if (savedTheme === 'dark') {
                document.body.setAttribute('data-theme', 'dark');
                document.getElementById('themeBtn').innerText = '라이트모드';
            }
        };
    </script>
