        function handleSearch() {
            const query = document.getElementById('searchInput').value;
            if (query) { location.href = `${query}.html`; } else { alert('검색어를 입력해주세요.'); }
        }
        document.addEventListener('DOMContentLoaded', function() {
            const tooltip = document.getElementById('wiki-tooltip');
            const footnotes = document.querySelectorAll('sup a[id^="rfn-"]');
            
            footnotes.forEach(fn => {
                fn.addEventListener('mouseenter', function(e) {
                    const targetId = this.getAttribute('href').substring(1); 
                    const contentElement = document.getElementById(targetId);
                    if (contentElement) {
                        // 각주 내용 가져오기 (화살표 링크 제거)
                        let html = contentElement.innerHTML;
                        html = html.replace(/<a[^>]*>\^<\/a>/g, ''); 
                        
                        tooltip.innerHTML = html;
                        tooltip.style.display = 'block';
                        
                        // 위치 계산 (화면 밖으로 나가지 않게 조정)
                        const rect = this.getBoundingClientRect();
                        let left = rect.left;
                        let top = rect.bottom + window.scrollY + 5;

                        // 툴팁이 오른쪽 화면을 넘어가는 경우 조정
                        if (left + 300 > window.innerWidth) {
                            left = window.innerWidth - 310;
                        }

                        tooltip.style.left = left + 'px';
                        tooltip.style.top = top + 'px';
                    }
                });
                
                fn.addEventListener('mouseleave', function() { 
                    tooltip.style.display = 'none'; 
                });
            });
        });
    </script>
