        });

        // 각주 호버보드 스크립트
        document.addEventListener('DOMContentLoaded', () => {
            const tooltip = document.getElementById('wiki-tooltip');
            const fnLinks = document.querySelectorAll('.wiki-ref a');

            fnLinks.forEach(link => {
                link.addEventListener('mouseenter', (e) => {
                    const fnId = link.getAttribute('data-id');
                    const fnContent = document.getElementById(fnId);
                    
                    if (fnContent) {
                        tooltip.innerHTML = fnContent.innerHTML;
                        tooltip.style.display = 'block';
                        
                        const rect = link.getBoundingClientRect();
                        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                        const scrollLeft = window.pageXOffset || document.documentElement.scrollLeft;
                        
                        let top = rect.bottom + scrollTop + 5;
                        let left = rect.left + scrollLeft + 10;

                        if (left + 320 > window.innerWidth) {
                            left = window.innerWidth - 340;
                        }

                        tooltip.style.top = top + 'px';
                        tooltip.style.left = left + 'px';
                    }
                });

                link.addEventListener('mouseleave', () => {
                    tooltip.style.display = 'none';
                });
            });
        });
    </script>
</body>
</html>